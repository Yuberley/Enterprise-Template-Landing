<style>
	.ai-demo {
		padding: var(--spacing-3xl) 0;
		background: linear-gradient(180deg, transparent, var(--color-bg-secondary) 50%, transparent);
		position: relative;
	}

	.container {
		max-width: 1280px;
		margin: 0 auto;
		padding: 0 var(--spacing-lg);
	}

	.demo-content {
		max-width: 900px;
		margin: 0 auto;
	}

	.demo-header {
		text-align: center;
		margin-bottom: var(--spacing-xl);
	}

	.demo-badge {
		display: inline-flex;
		align-items: center;
		gap: var(--spacing-xs);
		padding: var(--spacing-xs) var(--spacing-md);
		background: rgba(239, 68, 68, 0.1);
		border: 1px solid rgba(239, 68, 68, 0.3);
		border-radius: 50px;
		color: #ef4444;
		font-size: 0.875rem;
		font-weight: 600;
		margin-bottom: var(--spacing-md);
		animation: glow 2s ease-in-out infinite;
	}

	.demo-title {
		font-size: clamp(2rem, 4vw, 2.5rem);
		font-weight: 900;
		margin-bottom: var(--spacing-md);
	}

	.gradient-text {
		background: linear-gradient(135deg, var(--color-primary-light), var(--color-accent));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.demo-description {
		font-size: 1.125rem;
		color: var(--color-text-secondary);
		max-width: 700px;
		margin: 0 auto;
	}

	.demo-window {
		background: var(--color-bg-tertiary);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-xl);
		overflow: hidden;
		margin-bottom: var(--spacing-xl);
		box-shadow: var(--shadow-xl);
	}

	.demo-tabs {
		display: flex;
		border-bottom: 1px solid var(--color-border);
		background: var(--color-bg-secondary);
	}

	.tab {
		flex: 1;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: var(--spacing-xs);
		padding: var(--spacing-md);
		background: transparent;
		border: none;
		color: var(--color-text-muted);
		font-weight: 600;
		font-size: 0.9375rem;
		cursor: pointer;
		transition: all 0.3s ease;
		border-bottom: 2px solid transparent;
	}

	.tab:hover {
		color: var(--color-text-secondary);
		background: var(--color-bg-tertiary);
	}

	.tab.active {
		color: var(--color-primary-light);
		border-bottom-color: var(--color-primary);
		background: var(--color-bg-tertiary);
	}

	.demo-terminal {
		display: none;
	}

	.demo-terminal.active {
		display: block;
	}

	.terminal-header {
		display: flex;
		align-items: center;
		gap: var(--spacing-md);
		padding: var(--spacing-md) var(--spacing-lg);
		background: var(--color-bg-secondary);
		border-bottom: 1px solid var(--color-border);
	}

	.terminal-dots {
		display: flex;
		gap: var(--spacing-xs);
	}

	.terminal-dots span {
		width: 12px;
		height: 12px;
		border-radius: 50%;
	}

	.terminal-dots span:nth-child(1) {
		background: #ef4444;
	}

	.terminal-dots span:nth-child(2) {
		background: #f59e0b;
	}

	.terminal-dots span:nth-child(3) {
		background: #10b981;
	}

	.terminal-title {
		font-size: 0.875rem;
		color: var(--color-text-muted);
	}

	.terminal-body {
		padding: var(--spacing-lg);
		max-height: 600px;
		overflow-y: auto;
	}

	.terminal-line {
		display: flex;
		gap: var(--spacing-md);
		margin-bottom: var(--spacing-lg);
		padding: var(--spacing-md);
		border-radius: var(--radius-md);
	}

	.terminal-line .icon {
		font-size: 1.5rem;
		flex-shrink: 0;
	}

	.terminal-line.user {
		background: rgba(99, 102, 241, 0.05);
		border-left: 3px solid var(--color-primary);
	}

	.terminal-line.ai {
		background: rgba(245, 158, 11, 0.05);
		border-left: 3px solid var(--color-accent);
	}

	.terminal-line.ai.success {
		background: rgba(16, 185, 129, 0.05);
		border-left: 3px solid var(--color-success);
	}

	.terminal-line .message {
		flex: 1;
	}

	.terminal-line .message p {
		margin-bottom: var(--spacing-xs);
		color: var(--color-text-secondary);
		line-height: 1.6;
	}

	.terminal-line .message p:last-child {
		margin-bottom: 0;
	}

	.terminal-line .message strong {
		color: var(--color-text);
		font-weight: 700;
	}

	.terminal-line .message ul {
		margin: var(--spacing-sm) 0;
		padding-left: var(--spacing-lg);
		color: var(--color-text-secondary);
	}

	.terminal-line .message ul li {
		margin-bottom: var(--spacing-xs);
	}

	.terminal-line .ai-response {
		color: var(--color-accent) !important;
		font-weight: 600;
	}

	.terminal-line .info {
		font-family: 'Fira Code', monospace;
		font-size: 0.875rem;
	}

	.terminal-line code {
		background: var(--color-bg-tertiary);
		padding: 2px 8px;
		border-radius: var(--radius-sm);
		color: var(--color-primary-light);
		font-family: 'Fira Code', monospace;
	}

	.terminal-line .time {
		color: var(--color-success) !important;
		font-weight: 600;
		margin-top: var(--spacing-sm);
	}

	.terminal-line.progress {
		display: block;
		background: transparent;
		border: none;
		padding: 0;
	}

	.progress-item {
		display: flex;
		align-items: center;
		gap: var(--spacing-sm);
		padding: var(--spacing-sm);
		margin-bottom: var(--spacing-xs);
		color: var(--color-text-secondary);
		font-size: 0.9375rem;
	}

	.progress-item.done svg {
		color: var(--color-success);
	}

	.progress-item.loading {
		color: var(--color-primary-light);
	}

	.spinner {
		width: 16px;
		height: 16px;
		border: 2px solid var(--color-border);
		border-top-color: var(--color-primary);
		border-radius: 50%;
		animation: spin 1s linear infinite;
	}

	@keyframes spin {
		to {
			transform: rotate(360deg);
		}
	}

	.demo-features {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: var(--spacing-lg);
	}

	.feature-card {
		text-align: center;
		padding: var(--spacing-lg);
		background: var(--color-bg-secondary);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		transition: all 0.3s ease;
	}

	.feature-card:hover {
		border-color: var(--color-primary);
		transform: translateY(-4px);
	}

	.feature-icon {
		font-size: 2.5rem;
		margin-bottom: var(--spacing-sm);
	}

	.feature-card h3 {
		font-size: 1.125rem;
		font-weight: 700;
		margin-bottom: var(--spacing-xs);
		color: var(--color-text);
	}

	.feature-card p {
		font-size: 0.9375rem;
		color: var(--color-text-muted);
		line-height: 1.6;
	}

	@media (max-width: 768px) {
		.demo-tabs {
			flex-direction: column;
		}

		.tab {
			border-bottom: 1px solid var(--color-border);
		}

		.tab.active {
			border-bottom: 2px solid var(--color-primary);
		}

		.terminal-body {
			max-height: 500px;
		}

		.demo-features {
			grid-template-columns: 1fr;
		}
	}
</style>

<script>
	const tabs = document.querySelectorAll('.tab');
	const terminals = document.querySelectorAll('.demo-terminal');

	tabs.forEach(tab => {
		tab.addEventListener('click', () => {
			const targetTab = tab.getAttribute('data-tab');

			// Remove active class from all tabs and terminals
			tabs.forEach(t => t.classList.remove('active'));
			terminals.forEach(t => t.classList.remove('active'));

			// Add active class to clicked tab and corresponding terminal
			tab.classList.add('active');
			document.querySelector(`[data-content="${targetTab}"]`)?.classList.add('active');
		});
	});
</script>
